<!-- app/views/forum/post_categories/new.html.erb -->

<div class="bg-black text-white p-4">
  <h1 class="text-xl font-bold mb-4">Create New Post Category</h1>
  
  <%= form_with(model: [:forum, @post_category], local: true) do |form| %>
    <div class="mb-4">
      <%= form.label :name, class: "block text-gray-300 text-sm font-bold mb-2" %>
      <%= form.text_field :name, class: "shadow appearance-none border rounded w-full py-2 px-3 text-black bg-gray-100 leading-tight focus:outline-none focus:shadow-outline" %>
      </div>

    <div>
      <%= form.submit "Create Category", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
    </div>
  <% end %>
</div>
