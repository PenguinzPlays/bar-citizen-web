<div class="flex justify-center mt-4 dark:bg-gray-800">
  <div class="w-full max-w-2xl px-4">
    <p class="text-green-600 dark:text-green-400"><%= notice %></p>

    <h1 class="text-2xl font-bold text-center mb-6 dark:text-white">Events</h1>


    <div id="events">
      <% @events.each do |event| %>
        <div id="<%= dom_id event %>" class="bg-white shadow-md rounded-lg p-6 mb-6">
    <%= render event %>
    <p class="text-right">
    <%= link_to "Show this event", event, class: "text-blue-600 hover:text-blue-800" %>
  </p>
</div>
<% end %>
</div>

<%= link_to "New event", new_event_path, class: "text-blue-600 hover:text-blue-800" %>
</div>
</div>